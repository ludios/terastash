#!/bin/bash

# Enable "long stack traces" on bluebird promises
export BLUEBIRD_DEBUG=1

SELF="$(dirname "${BASH_SOURCE[0]}")"
# On Windows, iojs needs a normal Windows path, not a cygwin path
if [ -f /usr/bin/cygpath ]; then
	SELF="$(/usr/bin/cygpath -w "$SELF")"
fi
iojs --harmony --harmony-rest-parameters --harmony-arrow-functions --strong-mode "$SELF/ts.js" "$@"
